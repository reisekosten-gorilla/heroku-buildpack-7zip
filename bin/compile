#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# Fail fast
set -e

# Debug
# set -x

BUILD_DIR=$1
VENDOR_DIR="$BUILD_DIR/vendor"
PROFILE_PATH="$BUILD_DIR/.profile.d/p7zip.sh"

mkdir -p $VENDOR_DIR
mkdir -p $(dirname $PROFILE_PATH)

echo "-----> Fetching and vendoring p7zip version: 9.20.1"
curl -L "https://github.com/Lilanga/Packages/raw/main/p7zip_9.20.1.tar.gz"  -s -o - | tar xzf - -C "$VENDOR_DIR"
mv "$VENDOR_DIR/p7zip_9.20.1" "$VENDOR_DIR/p7zip"
chmod +x $VENDOR_DIR/p7zip/bin/7za

echo "export PATH=\$PATH:/app/vendor/p7zip/bin" >> $PROFILE_PATH
echo "       Installed p7zip version: 9.20.1 successfully"